<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="15dip">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/competitionName"
		android:textSize="23sp" />
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/competitionLocationAndDate"
		android:textSize="14sp" android:layout_marginBottom="10dip" />
		<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/startTime"
		android:textSize="14sp" />
		<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/state"
		android:textSize="14sp" />
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/event"
		android:textSize="14sp" />
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/registeredAthletesNumber"
		android:textSize="14sp" />
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/last_winner"
		android:textSize="14sp" />
		<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/categories"
		android:textSize="14sp" />
		
</LinearLayout>