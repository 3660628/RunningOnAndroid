<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:padding="10dip"
	android:gravity="center_vertical">
	<AbsoluteLayout android:layout_height="40dip" android:layout_width="50dip">
	<ImageView android:layout_height="40dip" android:layout_width="40dip"
			android:id="@+id/faceView" android:layout_marginRight="10dip"
			android:textSize="11dip" android:gravity="center" />
	<ImageView android:layout_height="20dip" android:layout_width="20dip"
			android:id="@+id/tickView" 
			android:layout_x="30dip" android:layout_y="20dip"
			android:textSize="11dip" android:gravity="center" />	
	</AbsoluteLayout>
	<TextView android:layout_height="40dip" android:layout_width="5dip"
			android:id="@+id/colorView" android:layout_marginRight="10dip"
			android:textSize="11dip" android:gravity="center" />
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content">	
		<TextView android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/athleteName"
			android:textSize="17sp" />
			<TextView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/athleteCategory"
		android:textSize="11sp" />
		<TextView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/athleteStats"
		android:textSize="11sp" android:visibility="gone" />
	</LinearLayout>
</LinearLayout>