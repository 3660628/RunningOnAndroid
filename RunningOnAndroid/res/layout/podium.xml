			android:textSize="11dip" />
	<TextView android:layout_height="wrap_content" android:layout_width="80dip"
			android:id="@+id/first_name" 
			android:layout_x="105dip" android:layout_y="105dip"
			android:textSize="14dip"/>
	<TextView android:layout_height="wrap_content" android:layout_width="80dip"
			android:id="@+id/second_name" 
			android:layout_x="10dip" android:layout_y="155dip"
			android:textSize="14dip"/>
	<TextView android:layout_height="wrap_content" android:layout_width="80dip"
