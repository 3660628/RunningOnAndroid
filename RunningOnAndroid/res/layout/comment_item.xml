<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:padding="5dip"
	android:gravity="center_vertical">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<TextView android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/commentWriter"
			android:textSize="15sp" />

		<TextView android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/commentDate"
			android:textSize="15sp" android:layout_marginLeft="5dip" />
	</LinearLayout>

	<TextView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/commentText"
		android:textSize="15sp" />
</LinearLayout>