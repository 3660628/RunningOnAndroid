<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:background="@color/post_color">
		<EditText android:layout_height="55dip" android:layout_width="fill_parent"
			android:id="@+id/commentText" android:textSize="18dip" />
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="right">
		<!--<Button android:id="@+id/cameraButton" android:text="Foto"
			android:layout_height="35dip" android:layout_width="70dip"
			android:textSize="12dip"  />  -->
		<Button android:id="@+id/postButton" android:text="Enviar"
			android:layout_height="35dip" android:layout_width="70dip"
			android:textSize="12dip" />
		</LinearLayout>
	</LinearLayout>
	<ListView android:id="@+id/commentsListView"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />
</LinearLayout>